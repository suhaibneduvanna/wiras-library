<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit User</h2>
                <form id="edit-user-form">
                    <input hidden type="text" name="id" value="{{user._id}}">

                    <label for="">User ID</label>
                    <input value="{{user.UserID}}" type="text" name="UserID" class="form-control">

                    <label for="">Name</label>
                    <input id="nameInp" value="{{user.Name}}" type="text" name="Name" class="form-control">

                    <label for="">Email</label>
                    <input value="{{user.Email}}" type="email" name="Email" class="form-control">

                    <label for="">DOB</label>
                    <input value="{{user.DOB}}" type="date" name="DOB" class="form-control">

                    <button type="submit" class="btn btn-primary mt-4 float-right">Edit</button>

                </form>
            </div>
        </div>
    </div>
</section>




